                    </controls:Carousel.ItemTemplate>
                </controls:Carousel>
            </Border>
        </StackPanel> -->
        <TextBlock x:Name="textBlock" Text="TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="3" /> 
    

        <StackPanel x:Name = "BottomPanel"  Padding = "10" Orientation = "Horizontal" VerticalAlignment="Bottom"  Grid.Row="3" Grid.ColumnSpan="3">
            <Image Width="200" Height="200" VerticalAlignment="center" Source="./Images/technon.png" Stretch="Uniform" />
            <TextBlock x:Name="botAnswer" Text="Bot Answer " Margin="100 10" HorizontalAlignment="Right"  VerticalAlignment="center" Grid.Row="3"/>
        </StackPanel>

    </Grid>
</Page>
